<h1>Listing comments</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Commendable type</th>
    <th>Commendable</th>
    <th>Email</th>
    <th>Name</th>
    <th>Url</th>
    <th>Public</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.text %></td>
    <td><%= comment.commendable_type %></td>
    <td><%= comment.commendable_id %></td>
    <td><%= comment.email %></td>
    <td><%= comment.name %></td>
    <td><%= comment.url %></td>
    <td><%= comment.public %></td>
    <td><%= link_to 'Show', comment %></td>
    <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_comment_path %>
