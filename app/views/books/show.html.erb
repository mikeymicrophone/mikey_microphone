<div id="book_background">
	<p id="notice"><%= notice %></p>
	<h1><%= @book.name %></h1>

	<% @book.chapters.each do |chapter| %>
	  <% div_for chapter do %>
		  <h2><%= link_to chapter.name, chapter %></h2>
		  <% div_for chapter, :content do %>
		    <%= raw RedCloth.new(chapter.content).to_html %>
		  <% end %>
		<% end %>
	<% end %>
</div>